
{
  "manifest_version": 3,
  "name": "Send and Archive",
  "version": "1.0.4",
  "description": "Send your message and automatically archive the original message being replied to",
  "author": "Your Name",
  "browser_specific_settings": {
    "gecko": {
      "id": "send-and-archive@example.com",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "compose",
    "compose.send",
    "messagesRead",
    "messagesMove",
    "accountsRead",
    "storage",
    "notifications"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "commands": {
    "send-and-archive": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Send and Archive"
    }
  },
  "compose_action": {
    "default_title": "Send and Archive",
    "default_icon": "icons/icon-48.png"
  }
}
